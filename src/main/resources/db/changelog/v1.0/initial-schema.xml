<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!-- Создание пользователя (выполняется в системной БД postgres) -->
    <changeSet id="create-user" author="dev.mda">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM pg_roles WHERE rolname = 'postgres'
            </sqlCheck>
        </preConditions>
        <sql dbms="postgresql">
            CREATE USER postgres WITH PASSWORD 'postgres';
        </sql>
    </changeSet>

    <!-- Выдача прав (выполняется в новой БД) -->
    <changeSet id="grant-privileges" author="dev.mda">
        <sql dbms="postgresql">
            GRANT ALL PRIVILEGES ON DATABASE subscription_db TO postgres;
            ALTER DATABASE subscription_db OWNER TO postgres;
        </sql>
        <comment>Grant privileges to application user</comment>
    </changeSet>

    <changeSet id="create-schema" author="dev.mda">
        <sql dbms="postgresql">
            CREATE SCHEMA IF NOT EXISTS subscription_schema;

            ALTER ROLE postgres SET search_path TO subscription_schema, public;
        </sql>
    </changeSet>


</databaseChangeLog>